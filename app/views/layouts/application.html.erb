<!DOCTYPE html>
<html>
<head>
  <title>FileUploaderExcercise</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<%= render 'layouts/header' %>
<div>
<%= current_user || "" %>
<%= link_to("LogOut", logout_path, class: "btn btn-danger pull-right", method: :delete) if logged_in_user?%>
</div>
<% flash.each do |key, val| %>
  <%= content_tag :div, class: "alert alert-#{key}" do %>
    <% if val.is_a? String %>
      <%= content_tag :h4, val  %>
    <% else %>
      <% val.each do |k,v| %>
        <%= content_tag(:h4, "#{k.capitalize}: #{v.each{|c| c.capitalize!}.join(" ... ")}.") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><a style="height: 51px; border-bottom: 1px solid grey;">Your Files (n)</a></li>
      <li><a href="#">File 1</a></li>
      <li><a href="#">File 2</a></li>
      <li><a href="#">File 3</a></li>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="page-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">

            <%= yield %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
